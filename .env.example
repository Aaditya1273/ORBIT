# ORBIT Environment Configuration
# Copy this file to .env.production, .env.staging, or .env.development and fill in your values

# Application Settings
APP_NAME=ORBIT
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=production
SECRET_KEY=your-super-secret-key-here-change-this-in-production
TIMEZONE=UTC

# Database Configuration
POSTGRES_DB=orbit
POSTGRES_USER=orbit
POSTGRES_PASSWORD=your-secure-database-password
DATABASE_URL=postgresql://orbit:your-secure-database-password@postgres:5432/orbit

# Redis Configuration
REDIS_PASSWORD=your-secure-redis-password
REDIS_URL=redis://:your-secure-redis-password@redis:6379

# AI Model API Keys
GOOGLE_API_KEY=your-gemini-api-key
OPEN_ROUTER_API_KEY=your-open-router-api-key

# Optional: Direct API keys (not needed if using OpenRouter)
OPENAI_API_KEY=your-openai-api-key-optional
ANTHROPIC_API_KEY=your-anthropic-api-key-optional

# Opik Configuration (AI Evaluation)
OPIK_API_KEY=your-opik-api-key
OPIK_PROJECT_NAME=orbit-production
OPIK_WORKSPACE=orbit

# n8n Configuration
N8N_USER=admin
N8N_PASSWORD=your-secure-n8n-password
N8N_HOST=your-domain.com
N8N_DB_NAME=n8n
N8N_API_KEY=your-n8n-api-key
N8N_ENCRYPTION_KEY=your-n8n-encryption-key
N8N_JWT_SECRET=your-n8n-jwt-secret

# External Integrations
GOOGLE_CALENDAR_CREDENTIALS=your-google-calendar-credentials-json
STRIPE_SECRET_KEY=your-stripe-secret-key
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token

# Monitoring and Logging
SENTRY_DSN=your-sentry-dsn
GRAFANA_USER=admin
GRAFANA_PASSWORD=your-secure-grafana-password
GRAFANA_SECRET_KEY=your-grafana-secret-key

# Performance Settings
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30
RATE_LIMIT_PER_MINUTE=60

# Behavioral Science Parameters
INTERVENTION_COOLDOWN_MINUTES=30
FAILURE_PREDICTION_THRESHOLD=0.7
CROSS_DOMAIN_SYNC_ENABLED=true

# Safety and Reliability
MIN_SUPERVISOR_SAFETY_SCORE=0.8
MIN_SUPERVISOR_RELEVANCE_SCORE=0.6
ENABLE_SELF_CORRECTION=true

# Logging
LOG_LEVEL=INFO
ENABLE_METRICS=true

# SSL Configuration (for production)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key

# Email Configuration (for notifications)
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USER=your-email@your-domain.com
SMTP_PASSWORD=your-email-password
FROM_EMAIL=noreply@your-domain.com

# Domain and URLs
DOMAIN=your-domain.com
API_URL=https://api.your-domain.com
FRONTEND_URL=https://your-domain.com
WEBHOOK_URL=https://your-domain.com/webhooks